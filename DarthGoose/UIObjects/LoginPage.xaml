<Page x:Class="DarthGoose.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DarthGoose"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <PasswordBox x:Name="LoginPassword" HorizontalAlignment="Center" Margin="0,276,0,0" VerticalAlignment="Top" Width="308" Height="35" />
        <TextBox x:Name="LoginUsername" HorizontalAlignment="Center" Margin="0,217,0,0" TextWrapping="Wrap" Text="User Name" VerticalAlignment="Top" Width="308" Height="35" />
        <TextBlock x:Name="LoginTitle" HorizontalAlignment="Center" Margin="0,52,0,0" TextWrapping="NoWrap" Text="Welcome" VerticalAlignment="Top" FontSize="100" Foreground="White" FontWeight="Bold" FontFamily="Cooper Black"/>
        <Button x:Name="LoginButton" Content="Sign In" HorizontalAlignment="Center" Margin="0,337,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.145,-0.178" Width="150" Height="55"/>
        <Button x:Name="CreateAccountButton" Content="Create Account" HorizontalAlignment="Center" Margin="0,392,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.448,0.44" Width="150" Height="55"/>
    </Grid>
</Page>
